{% extends '@PrestaShop/Admin/layout.html.twig' %}


{% block content %}

    <div class="card">
        <div class="card-header">
            <h2 class="pt-2 pl-2">{{ "Cron infos" |trans({}, 'Modules.OutOfStockReminder.Admin') }}</h2>
        </div>
        <div class="card-body ">

            <div class="d-flex flex-column align-items-center py-3">
                <div>
                    <span>{{ "Possible cron calls" |trans({}, 'Modules.OutOfStockReminder.Admin') }}</span>
                    <ul>
                        <li><span class="font-weight-bold">php</span> {{path}}/modules/outofstockreminder/cron.php </li>
                        <li><span class="font-weight-bold">wget</span> --no-check-certificate -O {{ url }}</li>
                    </ul>
                <a href="{{ url }}" class="btn btn-primary" id="save-button" target="_blank">
                    {{ 'Execute cron now'|trans({}, 'Admin.Actions') }}
                </a>
                </div>


            </div>

        </div>


    </div>


{% endblock content %}