{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% block content %}
    <div class="container">
        <form action="{{ path('out_of_stock_update', {id}) }}" method="POST">
            {{ form_start(formView) }}

            {{ form_row(formView.title) }}
            {{ form_row(formView.product) }}
            {{ form_row(formView.category_id) }}
            {{ form_row(formView.threshold) }}
            {{ form_row(formView.email) }}
            <div class="form-group">
                <div class="mb-3">Status</div>
                <span class="ps-switch">
    <input
            type="radio"
            name="status"
            id="example_off_2"
            value="0"
    />
    <label for="example_off_2">Off</label>
    <input
            type="radio"
            name="status"
            id="example_on_2"
            value="1"
            checked
    />
    <label for="example_on_2">On</label>
    <span class="slide-button"></span>
  </span>
            </div
            {{ form_row(formView.save) }}
            {{ form_end(formView) }}

        </form>
    </div>

{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('../modules/outofstockreminder/views/js/form.js') }}"></script>
{% endblock %}