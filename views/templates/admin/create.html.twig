{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% block content %}
    <div class="container">
        <form action="{{ path('sent_rule') }}" method="POST">
            {{ form_start(formView) }}

            {{ form_row(formView.title) }}
            {{ form_row(formView.product) }}
            <div class="form-group">
                <div class="md-checkbox">
                    <label>
                        <input type="checkbox" name="category_id" id="selectAllCategories">
                        <i class="md-checkbox-control"></i>
                        {{ "Select all categories " |trans({}, 'Modules.OutOfStockReminder.Admin')}}
                    </label>
                </div>
            </div>
            {{ form_row(formView.category_id) }}
            {{ form_row(formView.threshold) }}
            {{ form_row(formView.email) }}
            <div class="form-group">
                <div class="mb-3 ml-1">{{ "Status" |trans({}, 'Modules.OutOfStockReminder.Admin')}}</div>
                <span class="ps-switch ml-1">
    <input
            type="radio"
            name="status"
            id="example_off_2"
            value="0"
    />
    <label for="example_off_2">{{ "Off" |trans({}, 'Modules.OutOfStockReminder.Admin')}}</label>
    <input
            type="radio"
            name="status"
            id="example_on_2"
            value="1"
            checked
    />
    <label for="example_on_2">{{ "On" |trans({}, 'Modules.OutOfStockReminder.Admin')}}</label>
    <span class="slide-button"></span>
  </span>
            </div
            {{ form_row(formView.save) }}
            {{ form_end(formView) }}

        </form>
    </div>
{% endblock content %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('../modules/outofstockreminder/views/css/style.css') }}">
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('../modules/outofstockreminder/views/js/form.js') }}"></script>
{% endblock %}